@{
    ViewData["Title"] = "Categoria";
}

@model List<AppWebProductos.Models.Categoria>

<a class="btn btn-secondary" asp-area="" asp-controller="Categoria" asp-action="AgregarCategoria">Agregar Categoria</a>

<h1 class="display-4">Tabla de Categoria</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id_Categoria</td>
                <td>@categoria.Nombre</td>
                <td>@categoria.Descripcion</td>
                <td>
                    <a class="btn btn-warning" asp-area="" asp-controller="Categoria" asp-action="ActualizarCategoria" asp-route-id="@categoria.Id_Categoria"><i class="bi bi-pencil-fill"></i> Actualizar</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Categoria" asp-action="EliminarCategoria" asp-route-id="@categoria.Id_Categoria"><i class="bi bi-eraser-fill"></i>Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>