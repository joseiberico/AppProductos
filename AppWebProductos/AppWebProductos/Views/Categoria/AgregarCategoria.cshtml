@{
    ViewData["Title"] = "Agregar Categoria";
}

@model AppWebProductos.Models.Categoria

<div class="container">
    <h2>Agregar Categoria</h2>
    <form id="form" method="post" action="@Url.Action("AgregarCategoria")">
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" id="nombre" name="Nombre" placeholder="Ingresa el nombre">
        </div>
        <div class="form-group">
            <label for="descripcion">Descripcion:</label>
            <input type="text" class="form-control" id="descripcion" name="Descripcion" placeholder="Ingresa la descripcion">
        </div>
        <button id="AgregarCategoria" type="submit" class="btn btn-primary">Agregar Categoria</button>
        <a class="btn btn-secondary" asp-area="" asp-controller="Categoria" asp-action="Categoria">Regresar</a>
    </form>
</div>

<script src="~/js/Categoria.js"></script>
